<h1>Listing owners</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Middlename</th>
      <th>Citizenship</th>
      <th>Current address</th>
      <th>Home address</th>
      <th>Passport no</th>
      <th>Home phone no</th>
      <th>Mobile no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.firstname %></td>
        <td><%= owner.lastname %></td>
        <td><%= owner.middlename %></td>
        <td><%= owner.citizenship %></td>
        <td><%= owner.current_address %></td>
        <td><%= owner.home_address %></td>
        <td><%= owner.passport_no %></td>
        <td><%= owner.home_phone_no %></td>
        <td><%= owner.mobile_no %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

