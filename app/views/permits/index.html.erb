<h1>Listing permits</h1>

<table>
  <thead>
    <tr>
      <th>Permit number</th>
      <th>Issued date</th>
      <th>Expiry date</th>
      <th>Permitowner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td><%= permit.permit_number %></td>
        <td><%= permit.issued_date %></td>
        <td><%= permit.expiry_date %></td>
        <td><%= permit.permitowner_id %></td>
        <td><%= link_to 'Show', permit %></td>
        <td><%= link_to 'Edit', edit_permit_path(permit) %></td>
        <td><%= link_to 'Destroy', permit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permit', new_permit_path %>
