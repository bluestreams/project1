<h1>Listing offences</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Charge fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offences.each do |offence| %>
      <tr>
        <td><%= offence.title %></td>
        <td><%= offence.description %></td>
        <td><%= offence.charge_fee %></td>
        <td><%= link_to 'Show', offence %></td>
        <td><%= link_to 'Edit', edit_offence_path(offence) %></td>
        <td><%= link_to 'Destroy', offence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offence', new_offence_path %>
