<% @page_title="List of roles" %>

<h4><%= link_to 'Add New Role', new_role_path %></h4>

<h4>Roles</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
        <td><%= role.description %></td>
        <td><%= link_to 'Show', role %> |
          <%= link_to 'Edit', edit_role_path(role) %> |
          <%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

