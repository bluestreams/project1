<h1>Listing admins</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Middlename</th>
      <th>Username</th>
      <th>Hashed password</th>
      <th>Salt</th>
      <th>National id no</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.firstname %></td>
        <td><%= admin.lastname %></td>
        <td><%= admin.middlename %></td>
        <td><%= admin.username %></td>
        <td><%= admin.hashed_password %></td>
        <td><%= admin.salt %></td>
        <td><%= admin.national_id_no %></td>
        <td><%= admin.role_id %></td>
        <td><%= link_to 'Show', admin %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

